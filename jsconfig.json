{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["config/*"],
      "@static/*": ["static/*"],
      "@dist/*": ["dist/*"],
      "@client":["src/client/*"],
      "@server":["src/server/*"]
    },
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "exclude": ["node_modules"]
}